{{!-- Main home page for users logged in or not will display list of articles, with filter options --}}

{{!-- All articles / Your article headings will act as buttons to allow switching
between viewing all articles and viewing your articles --}}
<div>
    <div class="header-image">
        <img src="./images/articles.jpg" width=100%>
        <div><span>Articles</span></div>
    </div>

    <div class="articles-body">

        <div class="card-delete-message">
            {{deleteMessage}}
        </div>

        {{#if user}}
        <div class="card-user-only-switch">
            <button id="switch-article-button" onclick="switchDisplayedArticles()">Show User Articles</button>
        </div>
        {{/if}}

        <div class="card-filters">
            <form class="all-article-form" action="">
                <label for="allSortOption">Sort articles by:</label>
                <select id="allSortOption" name="allSortOption" onchange="allSortOptions()">
                    <option value="publishDate" selected>Date</option>
                    <option value="userName">Author username</option>
                    <option value="title">Article Title</option>
                </select>
                <label for="desc">Descending:</label>
                <input type="radio" checked name="allSortOrder" value="desc" onclick="allSortOptions()">
                <label for="asc">Ascending:</label>
                <input type="radio" name="allSortOrder" value="asc" onclick="allSortOptions()">
            </form>
        </div>


        {{!-- 1. All article cards--}}
        <div class="card-container" id="all-card-container">
            {{{articlesHTML}}}
        </div>

        {{!-- 2. User's article cards--}}
        {{#if user}}
        <div class="card-container" id="user-card-container" style="display: none">
            <h2>{{user.userName}}'s Articles</h2>
            {{{userArticlesHTML}}}
        </div>
        {{/if}}
    </div>
</div>