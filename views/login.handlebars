
<div class="login-container">
    <span class="close" id="loginClose">&times;</span>
    <form class="login-form" action="./login" method="POST">
        <h1>Login</h1>
        {{#if loginError}}
        <div class="alert-message">
            <span class="alert-message-close-btn" onclick="this.parentElement.style.display='none';">&times;</span>
            {{loginError}}
        </div>
        {{/if}}
        <div>
            <label for="txtUserName">Username:</label>
            <input type="text" name="userName" id="txtUserName" required>
        </div>

        <div>
            <label for="txtPassword">Password:</label>
            <input type="password" name="password" id="txtPassword" required>
        </div>

        <div>
            <button type="submit">Log in</button>
        </div>
    </form>
    <div class="login-footer">
        <p>Don't have an account? <a href="./signup">Create one here.</a></p>
    </div>
</div>
