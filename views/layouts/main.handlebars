<body onload="getNumberOfNotifications({{user.userID}})">
    <p>Some place holder items/links for a nav bar to help testing</p>    
    <div id="navBar">
        {{#if user}}
            <a href="./">Home</a>
            <a href="./createArticle">Create Article</a>
            <a href="./profile?id={{user.userID}}">Profile</a>

            <div id="notifications")>
                <b>Notifications: </b><b id="number-of-notifications"></b>
                <div id="notification-details" style="display: none"></div>
                <button id="show-notification-details" onclick="showNotifications()">Show notifications</button>
            </div>

            <a href="./logout">Logout</a>
        {{else}}
            <a href="./">Home</a>
            <a href="./login">Login</a>
            <a href="./signup">Create Account</a>
        {{/if}}
